/* pages/login/login.wxss */
page{
  width: 100%;
  height: 100%;
}
.login{
  width: 100%;
  height: 100%;
  /* background-color: aqua; */
  background-color: #f0f0f5;
  position: relative;
}
/* 中间模块 */
.content{
  width: 80%;
  height: 60%;
  /* background-color: bisque; */
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
text{
  width: 100%;
  height: 100rpx;
  display: inline-block;
  text-align: center;
  line-height: 100rpx;
  font-size: 18px;
  font-family: '楷体';
}
.login-content{
  width: 100%;
  height: 80%;
  background-color: #fff;
  line-height: 60px;
  display: flex;
  flex-direction: column;
  align-items: center;
}